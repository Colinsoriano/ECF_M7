        function addMember() {
            const collaborateurSelect = document.getElementById("collaborateur");
            const selectedCollaborateur = collaborateurSelect.options[collaborateurSelect.selectedIndex];
            if (selectedCollaborateur.value !== "") {
                const addedMembersDiv = document.getElementById("addedMembers");

                // Créer un conteneur pour chaque collaborateur ajouté avec les boutons "+" et "-"
                const collaborateurContainer = document.createElement("div");
                collaborateurContainer.style.display = "flex";
                collaborateurContainer.style.alignItems = "center";
                collaborateurContainer.style.justifyContent = "space-between"; // Aligner les boutons à droite
                collaborateurContainer.style.marginBottom = "5px"; // Espacement entre les collaborateurs ajoutés

                // Créer le contenu du collaborateur ajouté
                const collaborateurName = selectedCollaborateur.textContent;

                // Créer le bouton de suppression
                const deleteButton = document.createElement("button");
                deleteButton.textContent = "-";
                deleteButton.type = "button";
                deleteButton.style.marginLeft = "10px"; // Espacement entre le bouton "+" et le bouton "-"
                deleteButton.onclick = function() {
                    // Supprimer le conteneur entier contenant les informations du collaborateur ajouté
                    addedMembersDiv.removeChild(collaborateurContainer);
                };

                collaborateurContainer.textContent = collaborateurName;
                collaborateurContainer.appendChild(deleteButton);

                addedMembersDiv.appendChild(collaborateurContainer);

                // Vous pouvez également stocker les membres ajoutés dans une variable ou un tableau pour les utiliser ultérieurement
            }
        }
